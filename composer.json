{
    "name": "overlu/mini-pay",
    "type": "package",
    "description": "Mini Payment Package",
    "keywords": [
        "mini",
        "pay",
        "wechat pay",
        "alipay",
        "unipay",
        "swoole"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-openssl": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "psr/http-message": "^1.1 || ^2.0",
        "guzzlehttp/psr7": "^1.9 || ^2.6"
    },
    "require-dev": {
        "overlu/mini-framework": "~2.13.0",
        "roave/security-advisories": "dev-latest",
        "guzzlehttp/guzzle": "~6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "MiniPay\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    }
}
